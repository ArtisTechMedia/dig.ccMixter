  <div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title"><span class="light-color">{{subTitle}}</span> {{{title}}}</h4>
    </div>
    <div class="modal-body">
      {{yield}}
    </div><!-- model-body -->
    <div class="modal-footer">
    {{#if action}}
        <a href="#" class="btn btn-primary btn-success" {{action 'submit'}}><span class="glyphicon glyphicon-share-alt"></span> {{t "tbForm.submit"}}</a>
    {{/if}}    
    <button type="button" id="{{pid}}PopupClose" class="btn btn-default" data-dismiss="modal">{{t 'dlPopup.close'}}</button>
    </div>
  </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
